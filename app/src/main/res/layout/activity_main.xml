<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notactivebtn"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/search_icn"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#00000000"
            android:hint="Search Products"
            android:drawableTint="@color/colorPrimary"
            android:inputType="text"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:id="@+id/search_field"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#cccccc" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_frame_container"
        android:layout_width="match_parent"
        android:layout_below="@id/search_layout"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <io.github.yavski.fabspeeddial.FabSpeedDial
        android:id="@+id/bottom_nav_Circ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fabGravity="bottom_end"
        app:fabMenu="@menu/main_nav"
        app:fabDrawable="@drawable/sys_logo"
        app:fabBackgroundTint="@color/colorAccent"
        app:miniFabBackgroundTint="@color/colorAccent"
        app:fabDrawableTint="@color/Gold"
        app:miniFabDrawableTint="@color/Gold"
        app:miniFabTitleTextColor="@color/colorAccent"/>


</RelativeLayout>