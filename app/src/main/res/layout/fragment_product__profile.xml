<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_Profile"
    android:paddingTop="20dp"
    android:background="@android:color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:id="@+id/product_profile_Buybtn"
            android:drawableStart="@drawable/cart_icn"
            android:drawableTint="@color/Gold"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:textColor="@color/Gold"
            android:background="@drawable/activebtn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:id="@+id/product_profile_Rentbtn"
            android:drawableStart="@drawable/rent_icn"
            android:drawableTint="@color/Gold"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/Gold"
            android:background="@drawable/activebtn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="true"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:scaleType="fitCenter"
        android:id="@+id/product_profile_img"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center_horizontal|top"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:hint="Product Name"
                android:id="@+id/product_profile_Name"
                android:textColorHint="@color/colorPrimary"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/product_profile_Price"
                android:layout_gravity="center_horizontal"
                android:hint="Price"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorPrimary"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:progressTint="@color/Gold"
                android:id="@+id/product_profile_Rate"
                android:progressBackgroundTint="@color/colorAccent"/>
            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:id="@+id/product_profile_Description"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="16sp"/>

            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Features"
                android:id="@+id/product_profile_Features"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="16sp"/>
            <MultiAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reviews"
                android:id="@+id/product_profile_Reviews"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent"
                android:textAlignment="textStart"
                android:textStyle="normal"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>