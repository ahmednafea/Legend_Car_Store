<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#ffffff"
    tools:context=".Signing">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:focusable="true"
        android:id="@+id/sign_in_btn"
        android:textColor="@color/Gold"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/activebtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="SIGN UP"
        android:background="@drawable/notactivebtn"
        android:id="@+id/sign_up_btn"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toStartOf="@id/sign_in_btn"/>
    <FrameLayout
        android:id="@+id/signing_frame_container"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_below="@id/sign_in_btn"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />
</RelativeLayout