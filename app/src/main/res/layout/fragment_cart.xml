<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="#ffffee"
    android:layout_height="match_parent"
    tools:context=".Main_Fragments.Cart_Fragment">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/Cart_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="5dp"
        android:layout_below="@id/Purchase_Btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Purchase"
        android:enabled="false"
        android:id="@+id/Purchase_Btn"
        android:background="@drawable/notactivebtn"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:padding="15dp"
        android:drawableStart="@drawable/star_icn"
        android:drawableTint="@color/colorPrimary"
        android:drawablePadding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cart_Receipt"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textSize="22sp"
        android:hint="00.00"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/money_icn"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Cart_Counter"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="22sp"
            android:hint="0"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorPrimaryDark"
            android:drawableEnd="@drawable/cart_icn"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
</RelativeLayout>